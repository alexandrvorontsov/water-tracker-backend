       "AddWaterRequest": {
        "type": "object",
        "required": ["date", "time", "water"],
        "properties": {
          "time": {
            "type": "string",
            "description": "Time of dose addition",
            "example": "00:00"
          },
          "waterValue": {
            "type": "number",
            "description": "Dose size",
            "example": 100
          },
          "date": {
            "type": "string",
            "description": "Date of dose addition",
            "example": "2024-01-30"
          }
        },
        "example": {
          "date": "2024-01-30",
          "time": "00:00",
          "waterValue": 200
        }
      },
      "WaterResponse": {
        "type": "object",
        "properties": {
          "percentage": {
            "type": "number",
            "description": "Percentage of the daily rate",
            "example": 31
          },
          "dailyPortions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Dose's id",
                  "example": "65b933d060bd22e993ec36a2"
                },
                "time": {
                  "type": "string",
                  "description": "Time of dose addition",
                  "example": "00:00"
                },
