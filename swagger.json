          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "user": {
            "type": "string",
            "description": "User's name",
            "example": "User"
          },
          "avatarURL": {
            "type": "string",
            "description": "Avatar URL",
            "example": "http://cloudy.com/avatar/taras.png"
          },
          "gender": {
            "type": "string",
            "description": "User's gender",
            "example": "female"
          },
          "waterRate": {
            "type": "number",
            "description": "User water norma",
            "example": 2000
          },
          "date": {
            "type": "string",
            "description": "Registration date",
            "example": "2024-01-30"
          }
        },
